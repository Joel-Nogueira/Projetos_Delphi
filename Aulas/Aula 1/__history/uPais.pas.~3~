unit uPais;

interface

type Pais = class
   private
    codigo: Integer;
    descricao: String[100]; //PARA NÃO HAVER PROBLEMA DE PERSITÊNCIA NO DB
   public
    constructor Create;

    procedure SetCodigo(pCodigo: Integer);
    procedure SetDescricao(pDescricao: String);

    function GetCodigo: Integer;
    function GetDescricao: String;

    destructor Destruct;
end;

implementation

end.
