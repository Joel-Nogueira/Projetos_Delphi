{$R *.dfm}

procedure TuPrincipal.DBCtrlGrid1PaintPanel(DBCtrlGrid: TDBCtrlGrid;
  Index: Integer);
begin
//  if Panel1.Color = clHighlight then
//    Panel1.Color := clHighlight
//  else
//    Panel1.Color := clRed;
end;

procedure TuPrincipal.FormCreate(Sender: TObject);
var
  I: Integer;
begin
  FDMemTable1.CreateDataSet;
  FDMemTable1.Open;
  for I := 1 to 15 do
  begin
    FDMemTable1.Append;
    FDMemTable1Vaga.AsString := '';
    FDMemTable1.Post;
  end;
end;

procedure TuPrincipal.Panel1Click(Sender: TObject);
begin

  if  (DBCtrlGrid1.SelectedColor = clHighlight) then
  begin
    DBCtrlGrid1.SelectedColor := clRed;
  end
  else
    DBCtrlGrid1.SelectedColor := clHighlight;
end;

end.
